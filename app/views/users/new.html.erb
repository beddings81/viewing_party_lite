<h2 style="text-align: center;">Register a New User</h2>

<div style="text-align: center;">
  <%= form_with url: users_path, method: :post, local: true do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <%= f.submit "Submit" %>
    <% end %>
</div>