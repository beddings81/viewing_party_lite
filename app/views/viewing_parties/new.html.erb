  <%= form_with url: viewing_parties_path, method: :post, local: true do |f| %>
    <%= f.label :duration %>
    <%= f.number_field :duration %>
    <%= f.label :when %>
    <%= f.text_field :when %>
    <%= f.label :start_time %>
    <%= f.text_field :start_time %>
    <% @users.each do |user| %>
      <%= f.label user.email %>
      <%= f.check_box user.email %>
    <% end %>
    <%= f.number_field :runtime, :value => @runtime, readonly: true %>
    <%= f.button "Create Party", name: "movie_id",value: "#{@movie.id}" %>
  <% end %>